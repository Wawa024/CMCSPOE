@model CMCSPOE.Models.ClaimModel

@{
    ViewData["Title"] = "Submit Claim";
}

<h1 class="text-center">Submit Claim</h1>

<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="SubmitClaim" enctype="multipart/form-data" method="post">
            <div class="form-group">
                <label asp-for="HoursWorked" class="control-label"></label>
                <input asp-for="HoursWorked" class="form-control" required />
                <span asp-validation-for="HoursWorked" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HourlyRate" class="control-label"></label>
                <input asp-for="HourlyRate" class="form-control" required />
                <span asp-validation-for="HourlyRate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Supporting Document:</label>
                <input type="file" name="supportingDocument" class="form-control" />
            </div>
            <div class="form-group text-center">
                <button type="submit" class="btn btn-primary">Submit Claim</button>
            </div>
        </form>
    </div>
</div>


